#!/usr/bin/env bash
set -e
if [[ ! -d "/home/adriano/git/og-id-tagging-schema" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/adriano/git/og-id-tagging-schema")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/adriano/git/og-id-tagging-schema" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/adriano/git/og-id-tagging-schema/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/adriano/git/og-id-tagging-schema/.envrc" "/home/adriano/git/og-id-tagging-schema/.direnv"/*.rc
